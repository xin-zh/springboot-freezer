<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xhu.freezer.dal.mapper.ProductMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.xhu.freezer.dal.entity.Product">
    <result column="id" property="id" />
        <result column="product_no" property="productNo" />
        <result column="product_name" property="productName" />
        <result column="product_desc" property="productDesc" />
        <result column="inventory" property="inventory" />
        <result column="unit_price" property="unitPrice" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        product_no, product_name, product_desc, inventory, unit_price, status, create_time, update_time
    </sql>

</mapper>
